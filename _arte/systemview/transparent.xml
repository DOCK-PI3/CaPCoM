<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
    <image name="box" extra="true">
      <pos>0.325 0.29</pos>
      <!-- <maxSize>0.24 0.24</maxSize> -->
    </image> 
      <video name="videobox" extra="true">
	  <origin>0 0</origin>
	  <pos>0.325 0.29</pos>
	  <!-- <default>./_arte/sistemasvideos/default.mp4</default> --> 
    </video>
    <carousel name="systemcarousel">
      <type>horizontal</type>
	  <logoSize>0.25 0.175</logoSize>
	  <maxLogoCount>3</maxLogoCount>
	  <logoScale>1.3</logoScale>
	  <color>FAFAFF00</color>
      <colorEnd>FAFAFF00</colorEnd>
      <systemInfoDelay>300</systemInfoDelay>
      <!-- <size>1 0.2325</size> -->
      <zIndex>20</zIndex>
      <pos>0 0.301</pos>
      <size>1 0.42</size>
      <origin>0 0</origin>
      <!-- <logoPos>-1 0.02</logoPos> -->
    </carousel>
    <image name="logo">
	     <!-- try svg -->
      <path>./_arte/logos/${system.theme}.svg</path>
	<!-- try png -->
      <path>./_arte/logos/${system.theme}.png</path>
      <!-- if system2 exists, take this version -->
      <!-- <path>./../../_arte/logos/${system.theme}.png</path> -->
      <reflexion>0.12 0.0</reflexion>
      <reflexionOnFrame>true</reflexionOnFrame>
    </image>
    <text name="md_name">
      <fontPath>./../_arte/Halo3.ttf</fontPath>
      <color>${baseColor}</color>
      <forceUppercase>true</forceUppercase>
    </text>	
	<image name="background" extra="static">
      <tile>false</tile>
      <path>${backgroundImage_A}</path>      
    </image>
	
	<!-- efecto de degradado -->
<!--     <image name="CenterFade" extra="true">
      <tile>false</tile>
      <pos>0.5 0.5</pos>
      <size>1 0.8</size>      
      <origin>0.5 0.5</origin>
      <path>./../centerfade.png</path>
      <color>${centerFadeColor}</color>
      <zIndex>12</zIndex>
    </image> -->
    <text name="systemInfo">
      <pos>0.295 0.718</pos>
      <size>0.45 0.25</size>
      <backgroundColor>0000FF00</backgroundColor>
      <color>${systemInfoColor}</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
      <fontSize>0.053</fontSize>
	  <fontPath>./_arte/Halo3.ttf</fontPath>
	  <reflexion>0.17 0.0</reflexion>
    </text>
	
	<helpsystem name="help">
	  <pos>0.32 0.957</pos>
      <textColor>${pauseColorTexto}</textColor>
      <iconColor>${pauseColorIconos}</iconColor>
    </helpsystem>
	
    <image name="carousel-inner" extra="true">
      <visible>false</visible>
    </image>
    <image name="carousel-shadow" extra="true">
      <visible>false</visible>
    </image>
  </view>
</theme>
